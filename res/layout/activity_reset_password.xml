<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="wrap_content"
        android:layout_height="50dp" >
        
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:background="#1B0A2A"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:textSize="20sp"
             android:textStyle="bold"
            android:text="Reset Password"
            android:textColor="#FAFAFA"
            android:background="@drawable/btn_title"
            android:layout_toRightOf="@+id/btn_back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rela1"
        android:layout_marginTop="-5dp"
        android:background="#BDBDBD" >
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">
         <TextView
            android:id="@+id/txt_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="#EFFBFB"
            android:textStyle="bold" 
            android:text="Enter your email address below"/>

        <EditText
            android:id="@+id/edt_email_reset"
            android:layout_width="280dp"
            android:layout_height="50dp"
             android:hint="Email"
             android:layout_below="@+id/txt_create_account"
             android:textColor="#848484"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edit_password"
            android:ems="10"
            android:inputType="textPersonName" >
        </EditText>

     

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edt_email_reset"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_play_press"
            android:text="Reset Password"
            android:textColor="#EFFBFB"
            android:textStyle="bold" />
       
         
        </RelativeLayout>
        
    
    </RelativeLayout>

</RelativeLayout>