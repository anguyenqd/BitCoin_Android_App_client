<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="fill_parent"
        
        android:layout_height="50dp" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:background="#1B0A2A"
            />

       <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:textSize="20sp"
            android:text="Guide"
            android:textStyle="bold"
            android:textColor="#FAFAFA"
            android:background="@drawable/btn_title"
            android:layout_toRightOf="@+id/btn_back" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rela1"
        android:layout_marginTop="-5dp"
        android:background="#BDBDBD" >

      <RelativeLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true" >

        <Button
            android:id="@+id/btn_tutorial"
            android:layout_width="200dp"
            android:layout_height="50dp"
            
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_play_press"
            android:text="Tutorial"
            android:textColor="#EFFBFB"
            android:textStyle="bold" />
 <Button
            android:id="@+id/btn_about_game"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_tutorial"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_play_press"
            android:text="About Game"
            android:textColor="#EFFBFB"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_about_bitcoin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_about_game"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_play_press"
            android:text="About Bitcoin"
            android:textColor="#EFFBFB"
            android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>